@page "/login"

@using BusinessLayer.Interfaces
@using Entities.DTO

@rendermode InteractiveServer

<div class="container d-flex justify-content-center align-items-center" style="height:80vh;">
    <form method="post" action="/account/login" class="w-100" style="max-width: 420px;">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h3 class="mb-0">USER LOGIN</h3>
            </div>
            <div class="card-body p-4">

                <div class="form-group mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" name="email" class="form-control form-control-lg" required placeholder="Uneti email..." />
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control form-control-lg" required placeholder="Uneti lozinku..." />
                </div>

                @if (error)
                {
                    <div class="@(error ? "text-danger" : null) mb-4">
                        Pogresan email ili lozinka
                    </div>
                }

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="submit">LOGIN</button>
                </div>

            </div>
        </div>
    </form>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "error")]
    public bool error { get; set; }
}
